CRON_TZ=America/New_York

# Update current weekly PF from fleaflicker (every 2 minutes)
# Enable the day the season starts
*/2 * * * *   root    /var/www/OldTimeHockey/scripts/oth.venv/bin/python3 /var/www/OldTimeHockey/scripts/UpdateCurrentPF.py 2>&1 | /usr/bin/ts '[\%Y-\%m-\%d \%H:\%M:\%S]' >> /var/www/OldTimeHockey/cronjob.log

# Run weekly scripts to update data stores
# Enable the day the season starts
0 13 * * 1   root    /var/www/OldTimeHockey/scripts/Weekly.sh 2>&1 | /usr/bin/ts '[\%Y-\%m-\%d \%H:\%M:\%S]' >> /var/www/OldTimeHockey/cronjob_weekly.log

# Run the ADP script for the current year. Disable after draft season
#*/15 * * * *    root    /var/www/OldTimeHockey/scripts/oth.venv/bin/python3 /var/www/OldTimeHockey/scripts/ADP.py 2>&1 >> /var/www/OldTimeHockey/cronjob.log
