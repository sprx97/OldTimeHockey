#*/2 * * * *   root    python3 /var/www/OldTimeHockey/scripts/UpdateCurrentPF.py | ts '[%Y-%m-%d %H:%M:%S]' >> /var/www/OldTimeHockey/cronjob.log 2>&1

# Run weekly scripts to update data stores
# Enable the day the season starts
#0 8 * * 1   root    /var/www/OldTimeHockey/scripts/Weekly.sh | ts '[%Y-%m-%d %H:%M:%S]' >> /var/www/OldTimeHockey/cronjob_weekly.log 2>&1

# Run the ADP script for the current year. Disable after draft season
*/15 * * * *    root    source /var/www/OldTimeHockey/scripts/oth.venv/bin/activate && python3 /var/www/OldTimeHockey/scripts/ADP.py >> /var/www/OldTimeHockey/cronjob.log 2>&1